.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  margin-top: 50rpx;
  background-color: #f2f6ff;
}

.container .noneBody {
  width: 100%;
  height: 400rpx;
  line-height: 400rpx;
  text-align: center;
  color: #999999;
  background-color: #fff;
  font-size: 40rpx;
}

.container .listUl {
  width: 95%;
  background-color: #1a1a1a;
  border-radius: 10rpx;

}

.container .listUl .listLi {
  padding-bottom: 30rpx;
  padding-top: 10rpx;
  padding-left: 60rpx;
  border-radius: 10rpx;
  border: 1px solid #ff7d03;
}

.container .listUl .listLi .content {
  padding-left: 10rpx;
  /*字母换行*/
  word-break: break-all;
}

.container .listUl .listLi .date {
  display: block;
  padding-left: 50rpx;
  font-size: 25rpx;
}


.popUp_btn {
  position: fixed;
  bottom: 40rpx;
  right: 20rpx;
  width: 100rpx;
  background-color: #ff7d03;
  /* font-size: 100rpx; */
  border-radius: 50%;
}

.moreFun {
  position: fixed;
  bottom: 0;
  width: 100%;
  /* z-index: 1000; */
  background: rgb(0, 0, 0);
  color: #ff7d03;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 45rpx;
}

.moreFun .changePlan_btn {
  position: absolute;
  bottom: 0;
  right: 60rpx;
  width: 100rpx;
  color: #ff7d03;
  /* background-color: #ff7d03; */
  /* border-radius: 50%; */
  /* opacity: 0; */
}

.moreFun text {
  padding: 0 90rpx;
}

.moreFun .iconfont {
  font-size: 45rpx;
}

/* 选框与text对齐 */
checkbox {
  vertical-align: middle;
  margin-top: -20rpx;
}

/* 选框样式 */

/* 用于设置未选中时框的样式 */
checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-color: #fc606b;
  background-color: transparent;
  /* transition: background-color .2s; */
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  color: #6e6e6e;
  /* 这里也可以设置对钩的颜色 */
  background-color: #6e6e6e;
}