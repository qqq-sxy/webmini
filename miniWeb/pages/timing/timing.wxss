.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  /* justify-self: center; */
  align-items: center;
  /* margin-top: 50rpx; */
  background: #f2f6ff;
}

.container .slider {
  width: 95%;
}

.container .task_text {
  display: flex;
  flex-direction: column;
  /* justify-self: center; */
  align-items: center;
  /* margin-top: 50rpx; */
  width: 95%;

}

.container .task_text .task_title {
  color: #000;
  font-weight: 800;
  font-size: 40rpx;
}

.container .task_text .task_desc {
  color: #000;
}

.container .cate_ul {
  width: 95%;
  height: 400rpx;
  line-height: 70rpx;
  margin-left: 2.5%;
  margin-top: 50rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  background-color: #f2f6ff;
  border-radius: 10rpx;
}

.container .cate_ul .cate_li {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;
  height: 200rpx;
  text-align: center;
  font-size: 35rpx;
  color: #000;
}

.container .cate_ul .cate_li .cate_icon {
  font-size: 45rpx;
}


.container .task_list {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 95%;
  margin-top: 30rpx;
  /* background: #1a1a1a; */
  color: #000;
  font-size: 35rpx;
}

.container .task_list .task_list_input {
  background-color: #f2f6ff;
  width: 65%;
  height: 90rpx;
  border-radius: 10rpx;
  padding-left: 30rpx;
}

.container .task_list .add_task_list {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30%;
  height: 90rpx;
  color: #fff;
  font-size: 30rpx;
  background-color: #ff9000;
}


/* 开始专注按钮 */
.container .start {
  width: 350rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
  font-weight: 800;
  border-radius: 50rpx;
  background-color: #ff9000;
  margin-top: 100rpx;
}


/* 时钟 */
.container .clock {
  width: 100%;
  overflow: hidden;
  background: #f2f6ff;
  /* height: 900rpx; */
}

.container .clock .itemTitle {
  margin-left: 50%;
  transform: translate(-50%);
  width: 400rpx;
  text-align: center;
  /* background-color: #ff9000; */
  color: #ff9000;
  font-size: 40rpx;
  font-weight: 800;
}

.container .clock .progress {
  width: 400rpx;
  height: 400rpx;
  /* background: orange; */
  margin: 140rpx auto;
  position: relative;
}

.progress .progress_bg,
.progress .progress_active {
  position: absolute;
  left: 0;
  top: 0;
  width: 400rpx;
  height: 400rpx;
}

.progress .progress_text {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  color: #000;
  text-align: center;
  position: absolute;
  left: 120rpx;
  top: 170rpx;
}

.btns .okBtn,
.btns .pauseBtn,
.btns .continueBtn,
.btns .cancleBtn {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #ff9000;
  border: 3rpx solid #ff9000;
  border-radius: 20rpx;
  margin: 0 auto 20rpx auto;
}

.container .task_ {
  width: 95%;
  margin-top: 30rpx;
  line-height: 90rpx;
  color: #000;
  font-size: 35rpx;
  background-color: #f2f6ff;
}

.container .task_ .task_content {
  height: 90rpx;
  display: flex;
  margin-bottom: 20rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #f2f6ff;
}

/* .container .task_ .task_content .task_content_text {
  width: 30%;
} */

.container .task_ .task_content .task_content_button {
  display: flex;

  width: 34%;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
  border-radius: 20px;
  background-color: #ff9000;
}

.container .task_ .task_content .task_content_button .task_content_btn {
  width: 50%;
  border-radius: 10rpx;
  /* border: 1px solid #ff9000; */
}