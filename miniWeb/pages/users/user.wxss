.container {
  display: flex;
  flex-direction: column;
  /* justify-self: center; */
  align-items: center;
  background-color: #f2f6ff;
  /* margin-top: 50rpx; */
}

.container .avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 600rpx;
  /* background-color: pink; */
}

.container .avatar image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.container .avatar .text {
  color: #000;
  text-align: center;
  font-size: 35rpx;
  margin-top: 20rpx;
}

.container .signOut {
  width: 95%;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  background-color: #1a1a1a;
  color: #ccc;
}

.container .success {
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1a1a1a;
  color: #f87905;
  text-align: center;
  font-size: 35rpx;
  font-weight: 700;
  margin-bottom: 30rpx;
}

.container .charts {
  display: flex;
  width: 95%;
  height: 500rpx;
  background-color: #1a1a1a;
  margin-bottom: 30rpx;
}

/* 番茄计时统计 */
.container .log {
  text-align: center;
  width: 95%;
  height: 450rpx;
  border-radius: 10rpx;
  background-color: #1a1a1a;
  color: #f87905;
  font-weight: 800;
}

.container .log .title {
  font-size: 40rpx;
}

.container .log .body {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  /* background-color: pink; */
}

.container .log .body .box {
  margin-top: 30rpx;
  width: 40%;
  height: 150rpx;
  /* border: 1px solid #fff; */
}

.container .log .body .box .text {
  margin-bottom: 40rpx;
}